<!DOCTYPE html>
<html>
  <head>
    <title>Unit 2 Assessment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>

    <% if (Todos.length === 0) { %>
    	<h3>There are no To Dos yet!</h3>
    <% } else { console.log(Todos)%>
    	<ul>
	    	<% Todos.forEach( todo => { %>
	    		<li>
	    			<%=todo.todo %> - 
	    			<% if(todo.done) { %>
	    				Done
	    			<% } else { %>
	    				Not Done
	    			<% } %>
	    				
	    		</li>
	    	<% }) %>
	    </ul>
    <% } %>

    <form method="POST" action="/create">
    	<input type="text" name="newTodo">
    	<button type="submit">
    		ADD TODO
    	</button>
    </form>

  </body>
</html>
